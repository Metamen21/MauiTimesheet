@page "/"
@using MauiTimesheet.Components.Layout

@layout AuthLayout

@inject NavigationManager NavigationManager
@inject AuthService AuthService


@code {
    protected override void OnInitialized()
    {
        if (AuthService.IsLoggedIn)
        {
            NavigationManager.NavigateTo("dashboard", false); // Changed to false to maintain history
        }
        else
        {
            NavigationManager.NavigateTo("login", true); // Keep replace: true for login redirect
        }
    }
}